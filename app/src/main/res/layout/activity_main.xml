<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editNoteName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="12"
        android:hint="@string/note_name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNoteDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="12"
        android:hint="@string/note_description"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNoteName" />

    <Button
        android:id="@+id/addNoteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_add_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveNoteButton"
        app:layout_constraintTop_toBottomOf="@+id/editNoteDescription"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="true"
        android:onClick="addNote"
        />

    <Button
        android:id="@+id/saveNoteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_save_text"
        app:layout_constraintStart_toEndOf="@+id/addNoteButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNoteDescription"
        app:layout_constraintLeft_toRightOf="@+id/addNoteButton"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAllCaps="true"
        android:onClick="saveNote"
        />

    <ImageButton
        android:id="@+id/prevNoteButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:onClick="showPrevNote"
        app:layout_constraintEnd_toStartOf="@+id/nextNoteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNoteButton"

        android:src="@drawable/arrow_sm_left"
        android:scaleType="fitCenter"
        android:contentDescription="@string/button_prev_content_description" />

    <ImageButton
        android:id="@+id/nextNoteButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/prevNoteButton"
        app:layout_constraintStart_toEndOf="@+id/prevNoteButton"
        app:layout_constraintTop_toBottomOf="@+id/addNoteButton"
        android:onClick="showNextNote"
        android:src="@drawable/arrow_sm_right"
        android:scaleType="fitCenter"
        android:contentDescription="@string/button_next_content_description"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/showNoteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_random_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextNoteButton"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="true"
        android:onClick="showLastNote"


        android:textColor="@color/white"

        android:background="@drawable/custom_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>