<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondFragment"
        >

        <EditText
            android:id="@+id/editNoteName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="12"
            android:hint="@string/note_name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editNoteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="12"
            android:hint="@string/note_description"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editNoteName" />

        <Button
            android:id="@+id/addNoteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_add_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editNoteButton"
            app:layout_constraintTop_toBottomOf="@+id/editNoteDescription"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            />

        <Button
            android:id="@+id/editNoteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/button_edit_text"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addNoteButton"
            app:layout_constraintTop_toBottomOf="@+id/editNoteDescription" />

        <ImageButton
            android:id="@+id/prevNoteButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/nextNoteButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addNoteButton"

            android:src="@drawable/arrow_sm_left"
            android:scaleType="fitCenter"
            android:contentDescription="@string/button_prev_content_description" />

        <ImageButton
            android:id="@+id/nextNoteButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/prevNoteButton"
            app:layout_constraintStart_toEndOf="@+id/prevNoteButton"
            app:layout_constraintTop_toBottomOf="@+id/addNoteButton"
            android:src="@drawable/arrow_sm_right"
            android:scaleType="fitCenter"
            android:contentDescription="@string/button_next_content_description"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lastNoteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_random_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nextNoteButton"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>